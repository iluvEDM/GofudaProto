<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.gofudaproto.ClientViewTruckFragment" >

    <LinearLayout
        android:id="@+id/truckview_linear0"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/truckview_linear1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/truckview_profile_photo"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/abc_btn_check_material" />

            <TextView
                android:id="@+id/truckview_profile_summary"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_weight="1.5"
                android:gravity="center"
                android:text="summary" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/truckview_linear2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_weight="1"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/truckview_profile_star"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="0" />

            <Button
                android:id="@+id/truckview_profile_goreview"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="see review" />
        </LinearLayout>
        
        <LinearLayout
            android:id="@+id/truckview_linear3"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_weight="7"
            android:orientation="vertical" >
            <ScrollView 
                android:id="@+id/truckview_scrollcontent"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                ></ScrollView>
        </LinearLayout>

    </LinearLayout>

</FrameLayout>
